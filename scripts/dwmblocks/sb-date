#!/bin/bash
# Display the current time in HH:MM:SS.

day=$(date "+%d")
image="/usr/share/icons/Numix/64/places/calendar-$day.svg"

clock=$(date '+%I')

case "$clock" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac


case $BUTTON in
    1) notify-send "This Month" "$(cal | sed "s/\<$(date +'%e'|tr -d ' ')\>/<b><span color='red'>&<\/span><\/b>/")" --icon $image && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f st -e calcurse ;;
	3) notify-send "ğŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) setsid -f st -e emacs -nw "$0" ;;
esac


day=$(date "+%d")
#data=$(date +'%d/%m/%Y')
#data=$(date +"%a %d %b" | sed 's/  / /g')
data=$(date +'%d/%m')
image="/usr/share/icons/Numix/64/places/calendar-$day.svg"

echo "^c#d33682^ï³ ^d^$data  "
