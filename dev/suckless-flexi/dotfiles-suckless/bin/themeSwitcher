#!/bin/sh

choice=$(echo "ï†’ Gruvbox-Material\nï†’ Nord\nï†’ Everforest\nï†’ EverBlush\nï†’ Catppuccin\nï†’ Rose-Pine\nï†’ Onedark\nï†’ Black-Metal\nï´ Wallpaper" | dmenu -X 645 -Y 370 -W 580 -i -p "ï‚ Set Theme:")
bgloc="${XDG_DATA_HOME:-$HOME/walls}/bg"
currentThemeFile="${XDG_DATA_HOME:-$HOME/.local/share/}/currentTheme"

# No choice exit
[ -z "$choice" ] && exit 0

case $choice in
	'ï†’ Gruvbox-Material')
		wallust theme Gruvbox-Material-Dark && setbg $HOME/walls/gruvbox-material && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Nord')
		wallust theme Nord && setbg $HOME/walls/nord && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Everforest')
		wallust theme Everforest-Dark-Hard && setbg $HOME/walls/everforest && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ EverBlush')
		wallust theme Everblush && setbg $HOME/walls/everblush && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Catppuccin')
		wallust theme Catppuccin-Mocha && setbg $HOME/walls/catppuccin && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Rose-Pine')
		wallust theme rose-pine && setbg $HOME/walls/rose-pine && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Onedark')
	 	wallust theme base16-onedark && setbg $HOME/walls/onedark && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï†’ Black-Metal')
	 	wallust theme base16-black-metal && setbg $HOME/walls/black-metal && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
	'ï´ Wallpaper')
		setbg $HOME/walls/pywalWalls && wallust run $(readlink -f $bgloc) && notify-send -i "$bgloc" "Changing colors ğŸŒˆ" ;;
esac



# Track the current theme
echo "$choice" | awk '{ printf "%s\n", $2 }' > "$currentThemeFile"

# Pywalfox update
pywalfox update

# Reload dunst
pkill dunst; setsid -f dunst

# Source xresources
xrdb $HOME/.config/x11/xresources

# If running, dwm hit the key to refresh the color scheme.
pidof dwm >/dev/null && xdotool key super+F1 && notify-send -i "$bgloc" "Colors changed ğŸ‘‰ğŸ‘Œ ğŸŒˆ ğŸ˜"

# Wait ğŸ–ï¸
sleep 1

# Reload nm-applet
killall nm-applet && nm-applet &


